  "bugs": {
    "url": "https://github.com/dagron78/metis-mcp-demo/issues"
  },
  "homepage": "https://github.com/dagron78/metis-mcp-demo#readme",
  "dependencies": {
    "@modelcontextprotocol/server": "^0.1.0",
    "chromadb": "^1.7.0",
    "concurrently": "^8.2.2",
    "langchain": "^0.1.0",
    "pg": "^8.11.3"
  }
}
